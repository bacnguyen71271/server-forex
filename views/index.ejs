<html>
<head>
    <title>Forex Tool</title>
    <script src="public/jquery-3.3.1.min.js" ></script>
    <script src="public/socket.io.js"></script>



    <script>
        var socket = io('https://mforex.cf/'); 

        setInterval(()=>{
            socket.emit("laydanhsachroom");
        },5000);

        socket.on("danhsachroom",(data)=>{
                $(".danhsachmaster").html('');
                $.each(data,(i,v)=>{
                    $(".danhsachmaster").append("<div class='item'><div class='info'>Tên nhóm: <div class='idmaster'>"+v.groupName+"</div>Tên Người chơi: <div class='tenmaster'>"+v.fullName+"</div>"+v.status+"</div></div>");
                })
            });

        $(document).ready(()=>{
            socket.emit("laydanhsachroom");
        });
    </script>   
  
