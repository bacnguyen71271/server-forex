        },5000);
*/
        socket.on("danhsachroom",(data)=>{
                $(".danhsachmaster").html('');
                $.each(data,(i,v)=>{
                    if(v.status === "<div class='red'></div>"){
                        $(".danhsachmaster").append('<div class="col-xs-6 col-md-3 group hover-bg"><div class="hover-text"><button class="btn btn-custom-2 btn-lg" onclick="deteleMaster('+v.userID+')">Delete</button></div>  <i class="fa fa-users display"></i><h3>'+v.groupName+'</h3><p>'+v.fullName+'</p></div');
                    }else{
                        $(".danhsachmaster").append('<div class="col-xs-6 col-md-3 group hover-bg"><div class="hover-text"><button class="btn btn-custom-2 btn-lg" onclick="deteleMaster('+v.userID+')">Delete</button></div>  <i class="fa fa-users"></i><h3>'+v.groupName+'</h3><p>'+v.fullName+'</p></div');
                    }
                })
            });

         socket.on("danhsachslave",(data)=>{
                $(".danhsachslave").html('');
                $.each(data,(i,v)=>{
                    $(".danhsachslave").append("<div class='item'><div class='info'>ID Người chơi: <div class='idmaster'>"+v.userID+"</div>Tên Người chơi: <div class='tenmaster'>"+v.fullName+"</div></div><div class='delete' onclick='deteleUser("+v.userID+")'>Xóa</div></div>");
                })
            });
            

         function deteleMaster(data){
                if(confirm("Bạn muốn xóa master: "+data+" ?")){
                    socket.emit("deleteMaster",data);
                }
            }


        $(document).ready(()=>{
            socket.emit("laydanhsachroom");
            $("#submit-master").click(()=>{
                socket.emit("reg_group",{accountID:$("#accountid").val(),name:$("#name").val(),groupname:$("#groupname").val()});
            })

        });
    </script>   
